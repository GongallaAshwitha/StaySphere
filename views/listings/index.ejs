<% layout("layouts/boilerplate") %>

<!-- FONT AWESOME -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>

/* ================= TOP BAR ================= */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

/* ================= FILTER SECTION ================= */
.filter-wrapper {
  position: relative;
  flex: 1;
  min-width: 0;
}

.filter-bar {
  display: flex;
  gap: 40px;
  overflow-x: auto;
  scroll-behavior: smooth;
  white-space: nowrap;
  padding: 12px 50px;
  border-bottom: 1px solid #eee;
}

.filter-bar::-webkit-scrollbar {
  display: none;
}
.filter-bar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.filter-item {
  flex: 0 0 auto;
  min-width: 100px;
  text-align: center;
  cursor: pointer;
  color: #6c757d;
  transition: 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter-item i {
  font-size: 22px;
  margin-bottom: 6px;
}

.filter-item span {
  font-size: 14px;
}

.filter-item:hover {
  color: #0d6efd;
  transform: scale(1.05);
}

/* Scroll Buttons */
.scroll-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: white;
  border: 1px solid #ddd;
  border-radius: 50%;
  width: 34px;
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  z-index: 20;
}

.scroll-left { left: 5px; }
.scroll-right { right: 5px; }

/* ================= FILTER BUTTON ================= */
.filter-settings button {
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8px;
  border-radius: 50px;
}

/* ================= TAX TOGGLE ================= */
.tax-toggle {
  display: flex;
  align-items: center;
  gap: 10px;
}

.tax-toggle span {
  font-size: 14px;
  font-weight: 500;
}

.switch {
  position: relative;
  display: inline-block;
  width: 46px;
  height: 24px;
}

.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  inset: 0;
  background-color: #ccc;
  transition: .4s;
  border-radius: 34px;
}

.slider:before {
  position: absolute;
  content: "";
  height: 18px;
  width: 18px;
  left: 3px;
  bottom: 3px;
  background-color: white;
  transition: .4s;
  border-radius: 50%;
}

input:checked + .slider {
  background-color: #0d6efd;
}

input:checked + .slider:before {
  transform: translateX(22px);
}

/* ================= LISTINGS ================= */
.listing-card {
  transition: 0.3s ease;
  border-radius: 15px;
}

.listing-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.1);
}

.listing-img {
  height: 200px;
  object-fit: cover;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
}

/* ================= RESPONSIVE ================= */
@media (max-width: 768px) {
  .top-bar {
    flex-direction: column;
    align-items: stretch;
  }
}
</style>

<div class="container py-4">

  <!-- ================= TOP BAR ================= -->
  <div class="top-bar">

    <!-- FILTER SECTION -->
    <div class="filter-wrapper">
      <div class="scroll-btn scroll-left">
        <i class="fa-solid fa-chevron-left"></i>
      </div>

      <div class="filter-bar" id="filterBar">
        <div class="filter-item"><i class="fa-solid fa-umbrella-beach"></i><span>Beach</span></div>
        <div class="filter-item"><i class="fa-solid fa-mountain"></i><span>Mountain</span></div>
        <div class="filter-item"><i class="fa-solid fa-city"></i><span>City</span></div>
        <div class="filter-item"><i class="fa-solid fa-campground"></i><span>Camping</span></div>
        <div class="filter-item"><i class="fa-solid fa-water-ladder"></i><span>Pool</span></div>
        <div class="filter-item"><i class="fa-solid fa-tractor"></i><span>Farm</span></div>
        <div class="filter-item"><i class="fa-solid fa-gem"></i><span>Luxury</span></div>
        <div class="filter-item"><i class="fa-solid fa-house"></i><span>Villa</span></div>
        <div class="filter-item"><i class="fa-solid fa-tree"></i><span>Treehouse</span></div>
        <div class="filter-item"><i class="fa-solid fa-water"></i><span>Lake</span></div>
      </div>

      <div class="scroll-btn scroll-right">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    </div>

    <!-- FILTER BUTTON -->
    <div class="filter-settings">
      <button class="btn btn-light border px-3">
        <i class="fa-solid fa-sliders"></i>
        Filters
      </button>
    </div>

    <!-- TAX TOGGLE -->
    <div class="tax-toggle">
      <span>Display total after taxes</span>
      <label class="switch">
        <input type="checkbox" id="taxSwitch">
        <span class="slider"></span>
      </label>
    </div>

  </div>

  <!-- ================= LISTINGS ================= -->
  <% if (listings && listings.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% listings.forEach(listing => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 listing-card">
            <img 
              src="<%= listing.image?.url || '/images/default.jpg' %>" 
              class="card-img-top listing-img"
              alt="<%= listing.title || 'Listing Image' %>">

            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold mb-2">
                <%= listing.title || "No Title" %>
              </h5>

              <!-- PRICE AND GST -->
              <p class="fw-bold mb-1">
                ₹ <span class="price-value" data-price="<%= listing.price || 0 %>">
                  <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                </span>
                <span class="text-muted fw-normal">/ night</span>
              </p>
              <small class="text-muted gst-info" style="display:none;"></small>

              <p class="text-muted mb-3">
                <%= listing.location || "Unknown" %>, <%= listing.country || "Unknown" %>
              </p>

              <a href="/listings/<%= listing._id %>" 
                 class="btn btn-outline-primary mt-auto w-100">
                 View
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">
      No listings found.
    </div>
  <% } %>

</div>

<script>
document.addEventListener("DOMContentLoaded", function () {

  /* SCROLL BUTTONS */
  const filterBar = document.getElementById("filterBar");
  const scrollLeft = document.querySelector(".scroll-left");
  const scrollRight = document.querySelector(".scroll-right");

  scrollRight.addEventListener("click", function () {
    filterBar.scrollBy({ left: 300, behavior: "smooth" });
  });

  scrollLeft.addEventListener("click", function () {
    filterBar.scrollBy({ left: -300, behavior: "smooth" });
  });

  /* ================= GST CALCULATION ================= */
  const taxSwitch = document.getElementById("taxSwitch");
  const priceValues = document.querySelectorAll(".price-value");
  const gstInfos = document.querySelectorAll(".gst-info");

  taxSwitch.addEventListener("change", function () {

    priceValues.forEach(function(priceTag, index) {
      let originalPrice = parseFloat(priceTag.dataset.price) || 0;
      let gstAmount = originalPrice * 0.18;
      let totalPrice = originalPrice + gstAmount;

      if (taxSwitch.checked) {
        // Show total price
        priceTag.innerText = Math.round(totalPrice).toLocaleString("en-IN");
        // Show GST breakdown
        gstInfos[index].innerText = "₹ " + Math.round(gstAmount).toLocaleString("en-IN") + " GST included";
        gstInfos[index].style.display = "block";
      } else {
        // Show original price
        priceTag.innerText = originalPrice.toLocaleString("en-IN");
        // Hide GST info
        gstInfos[index].style.display = "none";
      }
    });

  });

});
</script>
